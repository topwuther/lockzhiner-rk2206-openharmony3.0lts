config DRIVERS_HDF_USB_DDK_HOST
    bool "Enable HDF LiteOS USB DDK HOST driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
        Answer Y to choice HDF LiteOS USB DDK HOST driver.

config DRIVERS_HDF_USB_PNP_NOTIFY
    bool "Enable HDF LiteOS USB PNP Notify driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
        Answer Y to choice HDF LiteOS USB PNP Notify driver.

config DRIVERS_HDF_USB_HOST_SERIAL
    bool "Enable HDF usb host serial driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb host serial driver.

config DRIVERS_HDF_USB_HOST_SERIAL_RAW
    bool "Enable HDF usb host serial raw driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb host serial driver.

config DRIVERS_HDF_USB_HOST_NET
    bool "Enable HDF usb host net driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb host net driver.

config DRIVERS_HDF_USB_HOST_SDK_API_SPEED
    bool "Enable HDF usb host sdk api speed driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb host sdk api speed test driver.

config DRIVERS_HDF_USB_HOST_SDK_RAW_SPEED
    bool "Enable HDF usb host sdk raw api speed driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb host sdk raw api speed test driver.

config DRIVERS_HDF_USB_HOST_NO_SDK_SPEED
    bool "Enable HDF usb host no sdk speed driver"
    default y
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb host no sdk speed test driver.