if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")
  lite_component("hdf_test_usb_device") {
    if (ohos_build_type == "debug") {
      deps = [
        "moduletest:hdf_peripheral_usb_test_module",
        "performance:hdf_usb_device_sdk_io_test",
        "unittest:hdf_usb_device_sdk_if_test",
      ]
    }
    features = []
  }
  lite_component("hdf_test_usb_host") {
    if (ohos_build_type == "debug") {
      deps = [ "unittest:usb_host_sdk_test" ]
    }
    features = []
  }
} else {
  group("hdf_test_usb") {
    testonly = true
    deps = [
      "moduletest:hdf_moduletest_usb",
      "unittest:hdf_unittest_usb",
    ]
  }
}
