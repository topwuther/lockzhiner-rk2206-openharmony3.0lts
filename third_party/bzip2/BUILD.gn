import("//build/ohos.gni")

config("bzip2_config") {
  include_dirs = [ "." ]
}

ohos_source_set("bzip2_src") {
  sources = [
    "blocksort.c",
    "bzlib.c",
    "compress.c",
    "crctable.c",
    "decompress.c",
    "huffman.c",
    "randtable.c",
  ]
  configs = [ ":bzip2_config" ]
}

ohos_static_library("libbz2") {
  deps = [ ":bzip2_src" ]
  public_configs = [ ":bzip2_config" ]
}
