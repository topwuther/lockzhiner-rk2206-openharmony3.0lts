import("//build/ohos.gni")
import("//build/ohos/ndk/ndk.gni")

config("lz4_config") {
  include_dirs = [ "." ]
  cflags = [
    "-Wno-incompatible-pointer-types",
    "-Werror",
    "-Wimplicit-function-declaration",
  ]
}
ohos_static_library("liblz4_static") {
  sources = [
    "lib/lz4.c",
    "lib/lz4frame.c",
    "lib/lz4hc.c",
    "lib/xxhash.c",
  ]
  public_configs = [ ":lz4_config" ]
}
